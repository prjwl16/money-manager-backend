// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Use auto increment for id
model User {
  id              Int               @id @default(autoincrement())
  firstName       String?
  lastName        String?
  phone           String?           @unique
  email           String?           @unique
  role            UserRole          @default(USER)
  createdAt       DateTime          @default(now()) @db.Timestamp()
  updatedAt       DateTime          @updatedAt @db.Timestamp()
  googleId        String?           @unique
  avatar          String?
  swUserId        Int?              @unique
  swAccessToken   String?
  doneSetup       Boolean           @default(false)
  // Relations
  // One to many
  accounts        Account[]
  categories      Category[]
  // Many to many
  userTransaction userTransaction[]
  userGroup       UserGroup[]
  adminIn         Group[]
  Transaction     Transaction[]
}

model Transaction {
  id                   Int                @id @default(autoincrement())
  type                 TransactionAction  @default(EXPENSE)
  amount               Float
  currency             currency           @default(INR)
  name                 String?
  description          String?
  date                 DateTime?
  place                String?
  createdAt            DateTime           @default(now()) @db.Timestamp()
  updatedAt            DateTime           @updatedAt @db.Timestamp()
  // recurring
  isRecurring          Boolean            @default(false)
  recurringPeriod      subscriptionPeriod @default(ONETIME)
  recurringPeriodCount Int?               @default(0)
  recurringStartDate   DateTime?
  recurringEndDate     DateTime?
  // Splitwise
  swExpenseId          Int?               @unique
  swGroupId            Int?               @unique
  // Relations
  createdBy            Int
  createdByUser        User               @relation(fields: [createdBy], references: [id])
  accountId            Int
  categoryId           Int
  groupId              Int
  userTransaction      userTransaction[]
  groups               Group?             @relation(fields: [groupId], references: [id])
  category             Category?          @relation(fields: [categoryId], references: [id])
  account              Account?           @relation(fields: [accountId], references: [id])
}

model Account {
  id        Int         @id @default(autoincrement())
  name      String
  type      AccountType @default(CASH)
  balance   Float       @default(0)
  isDefault Boolean     @default(false)
  createdAt DateTime    @default(now()) @db.Timestamp()
  updatedAt DateTime    @updatedAt @db.Timestamp()

  // Relations
  userId      Int // Many to one
  transaction Transaction[] // Many to many
  user        User?         @relation(fields: [userId], references: [id])
}

model Category {
  id           Int           @id @default(autoincrement())
  swId         Int?          @unique
  name         String
  isDefault    Boolean       @default(false)
  createdAt    DateTime      @default(now()) @db.Timestamp()
  updatedAt    DateTime      @updatedAt @db.Timestamp()
  // Relations
  userId       Int? // Many to one
  transactions Transaction[] // Many to many
  user         User?         @relation(fields: [userId], references: [id])
}

model Group {
  id           Int           @id @default(autoincrement())
  name         String?
  description  String?
  avatar       String?
  isDefault    Boolean       @default(false)
  createdAt    DateTime      @default(now()) @db.Timestamp()
  updatedAt    DateTime      @updatedAt @db.Timestamp()
  // Relations
  adminId      Int
  transactions Transaction[]
  UserGroup    UserGroup[]

  admin User @relation(fields: [adminId], references: [id])
}

model UserGroup {
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  group     Group    @relation(fields: [groupId], references: [id])
  groupId   Int
  createdAt DateTime @default(now()) @db.Timestamp()
  updatedAt DateTime @updatedAt @db.Timestamp()
  // Splitwise
  swUserId  Int?
  swGroupId Int?

  @@id([userId, groupId])
}

model userTransaction {
  user          User        @relation(fields: [userId], references: [id])
  userId        Int
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  transactionId Int
  createdAt     DateTime    @default(now()) @db.Timestamp()
  updatedAt     DateTime    @updatedAt @db.Timestamp()
  // Splitwise
  splitShare    Float       @default(0)
  splitPaid     Float       @default(0)

  @@id([userId, transactionId])
}

//
//
//
//
//
// Enums
enum UserRole {
  USER
  ADMIN
}

enum TransactionAction {
  INCOME
  EXPENSE
  SUBSCRIPTION
  SELF_TRANSFER
}

enum subscriptionPeriod {
  ONETIME
  MONTHLY
  QUARTERLY
  HALF_YEARLY
  YEARLY
}

enum AccountType {
  CASH
  BANK
  CREDIT_CARD
  DEBIT_CARD
  LOAN
}

enum currency {
  INR
  USD
}
